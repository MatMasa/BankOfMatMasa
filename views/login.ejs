        <div class="loginContainer">
            <div class="loginRow">
                <h1><i class="fa fa-lock" aria-hidden="true"></i> Login</h1>

            </div><br /><br />

            <form action="/login" method="POST">
                <%- include ('./partials/messages') %>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                </div>
                <input type="text" name="email" class="form-control" placeholder="Email" />
            </div><br />

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key icon"></i></span>
                </div>
                <input type="Password" name="password" class="form-control" placeholder="password" />
            </div><br />

            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-off"></span> Login</button>
            <br />
            <br />
            </form>
            <div class="footer">
                <p>No account? <a href="/users/register">Sign Up Here!</a></p>
                <p>Forgot <a href="#">Password?</a></p>
            </div>

        </div>


        <div class="container">
            <br />
            <h1 class="loginRow"> News</h1>

            <div class="accordion" id="newsAccordion">

                <% allNews.forEach(function(article, i){ %>

                <div class="card">
                    <div class="card-header" id="heading-<%= i %>">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left collapsed" type="button"
                                data-toggle="collapse" data-target="#collapse-<%= i %>" aria-expanded="false"
                                aria-controls="collapse-<%= i %>">
                                <strong><%= article.published.toDateString() %> </strong> <%-article.heading%>
                            </button>

                        </h2>
                    </div>

                    <div id="collapse-<%= i %>" class="collapse" role="tabpanel" data-parent="#newsAccordion">
                        <div class="card-body">
                            <p class="card-text"><%= article.content %></p>
                        </div>

                    </div>

                </div>
                <% }) %>
            </div>

        </div>

