<table id="newsTable" class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Heading</th>
            <th scope="col">Content</th>
            <th scope="col">Published</th>
            <th scope="col">Published by</th>
            <th scope="col">Management</th>

        </tr>
    </thead>
    <tbody>
        <% allNews.forEach(function(news, i){ %>
        <tr>
            <td><a href="/news/<%-news._id%>"><%-news._id%></a></td>
            <td><%-news.heading%></td>
            <td><%-news.content%></td>
            <td><%-news.published%></td>
            <td>TODO</td>
            <td>
                <a href="/news/<%-news.id%>/edit">⚙️</a>
                <a href="/news/<%-news.id%>/delete?_method=DELETE" , title="Delete news article"
                    onClick="return confirm('Confirm: really remove <%-news.header%>?')">✖</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#newsTable').DataTable();
    });
</script>